<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva Pregunta</h3>
        </div>
        <div class="card-body">
            <form action="/preguntas/nueva-pregunta" , method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <textarea type="text" name="question" class="form-control" placeholder="Pregunta" autofocus required></textarea>
                </div>
                <div class="form-group">
                    <input name="correctAnswer" placeholder="Respuesta Correcta" class="form-control" required></input>
                </div>
                <div class="form-group">
                    <input name="wrongAnswerOne" placeholder="Respuesta Incorrecta" class="form-control" required></input>
                </div>
                <div class="form-group">
                    <input name="wrongAnswerTwo" placeholder="Respuesta Incorrecta" class="form-control" required></input>
                </div>
                <div class="form-group">
                    <input name="wrongAnswerThree" placeholder="Respuesta Incorrecta" class="form-control" required></input>
                </div>
                <div class="form-group">
                    <select name="categoria" class="browser-default custom-select" required>
                        <option value="">Seleccione la categoria</option>
                        <option value="1">Microorganismos acuáticos</option>
                        <option value="2">Calidad del agua</option>
                        <option value="3">Ecología de organismos acuáticos</option>
                        <option value="4">Ecología costera</option>
                        <option value="5">Hidrogeología</option>
                        <option value="6">Contaminantes</option>
                        <option value="7">Comodín</option>
                    </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>